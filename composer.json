{
    "name": "galaxon/units",
    "description": "Contains classes for working with measurements such as angles, lengths, etc.",
    "type": "library",
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "../Core"
        },
        {
            "type": "path",
            "url": "../CodingStandard"
        }
    ],
    "require": {
        "php": "^8.4",
        "galaxon/core": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0 || ^12.0",
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "galaxon/coding-standard": "@dev"
    },
    "autoload": {
        "psr-4": {
            "Galaxon\\Units\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Galaxon\\Units\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix": "vendor/bin/phpcbf -vp",
        "check": "vendor/bin/phpcs -s",
        "analyze": "vendor/bin/phpstan analyze -l 9",
        "test": "php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-html build/coverage --coverage-clover build/logs/clover.xml --do-not-cache-result",
        "coverage": "php scripts/coverage-check.php",
        "quality": [
            "@fix",
            "@check",
            "@analyze",
            "@test",
            "@coverage"
        ]
    },
    "extra": {
        "phpcodesniffer-search-depth": 3
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
